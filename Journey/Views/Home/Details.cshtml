@using Journey.Entities
@model Place
@{
    ViewData["Title"] = "Details";
}
<div class="border p-3 mt-4">
    <div class="row pb-2">
        <h2 class="text-primary">
            Details
        </h2>
        <hr />
    </div>
    <div class="mb-3">
        <dl class="row">
            <dt class="col-sm-2">
                <label asp-for="PlaceName"></label>
            </dt>
            <dd class="col-sm-10">
                @Model.PlaceName
            </dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">
                <label asp-for="Description"></label>
            </dt>
            <dd class="col-sm-10">
                @Model.Description
            </dd>
        </dl>
    </div>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary" style="width:150px">
        Back to List
    </a>
</div>
