@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
        <a id="manage" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@UserManager.GetUserName(User)</a>
        @if (User.IsInRole("LandLord"))
        {
            <a class="btn btn-dark" asp-controller="LandLord" asp-action="RegisterObject">Register object</a>
        }
        <button id="logout" type="submit" class="btn btn-dark">Logout</button>
    </form>
}
else
{
    <a class="btn btn-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    <a class="btn btn-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
}
